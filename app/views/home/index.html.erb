                  format_title: { element: 'h2', name: 'Title', attributes: { 'class': 'title', 'id': 'title' } },
                  format_sub: { element: 'h3', name: 'Sub Title', attributes: { 'class': 'sub_title', 'id': 'sub_title' } },
                  format_paragraph: { element: 'p', name: 'Paragraph', attributes: { 'class': 'paragraph', 'id': 'paragraph' } }

                } );
                CKEDITOR.config.height = '520px';
                CKEDITOR.config.width = '100%';
              </script>
          </form>
        </div>
      </div>
    </div>
