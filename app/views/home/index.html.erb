  <div class="jumbotron">
    <div class="row">
      <div class="container">
        <div class="col-md-6">
        </div>
        <div class="col-md-6">
          <form>
              <textarea name="editor" id="editor">
                <%=  simple_format(@text).gsub('<br />', '<p>') %>
              </textarea>
              <script>
                CKEDITOR.replace( 'editor', {
